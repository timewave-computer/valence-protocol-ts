{
  "name": "valence-protocol-ts",
  "version": "1.0.0",
  "description": "Monorepo for Valence Protocol TypeScript projects",
  "main": "index.js",
  "keywords": [],
  "author": "Valence",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "vercel-build": "pnpm install --frozen-lockfile --link-workspace-packages=false && turbo build "
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "@valence-protocol/domain-clients-core": "^0.2.0",
      "@valence-protocol/domain-clients-react": "^0.2.0",
      "@valence-protocol/domain-modal-react": "^0.2.0"
    }
  }
}
